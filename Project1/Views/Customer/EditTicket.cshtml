@model Project1.Models.NewTicket

@{
    ViewBag.Title = "Edit";
}

<h2 class="editticket">Update your Ticket</h2>

<body class="editticket">
    <div class="fontnav">
        <div class="fontnav">
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <img class="logo" src="~/images/Zoho.png" />
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Zoho Customer Portal", "CustomerPage", "Customer", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.TicketId)

                <div class="form-group">
                    @Html.LabelFor(model => model.TicketType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("TicketType", new List<SelectListItem>
                        {
                              new SelectListItem { Text = "IT Support Ticket", Value = "IT Support Ticket",Selected = true},
                              new SelectListItem { Text = "Appforms Ticket", Value = "Appforms Ticket"},
                              new SelectListItem { Text = "RPA Related Ticket", Value = "RPA Related Ticket"}
                        }, "[Select]")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Team, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Team", new List<SelectListItem>
                        {
                              new SelectListItem { Text = "Internal IT", Value = "Internal IT",Selected = true},
                              new SelectListItem { Text = "External IT", Value = "External IT"}
                        }, "[Select]")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Category", new List<SelectListItem>
                        {
                              new SelectListItem { Text = "Hardware", Value = "Hardware",Selected=true},
                              new SelectListItem { Text = "Software", Value = "Software"},
                              new SelectListItem { Text = "Other", Value = "Other"},
                              new SelectListItem { Text = "Security", Value = "Security"},
                        }, "[Select]")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Priority, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Priority", new List<SelectListItem>
                        {
                              new SelectListItem { Text = "Critical", Value = "Critical"},
                              new SelectListItem { Text = "High", Value = "High",Selected = true},
                              new SelectListItem { Text = "Moderate", Value = "Moderate"},
                              new SelectListItem { Text = "Low", Value = "Low"},
                        }, "[Select]")
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StDescr, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StDescr, new { htmlAttributes = new { @class = "form-control", placeholder = "Short Description", @id = "STDescription", @onfocusout = "checknum()" } })
                        <small> </small>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description", @id = "Description", @onfocusout = "checknum()" } })
                        <small> </small>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "GetAllTickets")
        </div>
</body>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
