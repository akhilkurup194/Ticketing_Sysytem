@model IEnumerable<Project1.Models.NewTicket>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Zoho</title>
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <title>GetProductDetail</title>
</head>
<body class="userproductbody">
    <div class="fontnav">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <img class="logo" src="~/images/Zoho.png" />
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Zoho Agent Portal", "AgentPage", "AgentControls", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Add New Ticket", "AddTicket", "AgentControls")</li>
                        <li>@Html.ActionLink("Add New Customer", "AddCustByAgent", "AgentControls")</li>
                        <li>@Html.ActionLink("Customer List", "GetAllCustByAgent", "AgentControls")</li>
                        <li>@Html.ActionLink("All Posted Tickets", "GetAllTickets", "AgentControls")</li>
                        <li>@Html.ActionLink("Logout", "Index", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </br>
    </br>
    </br>
    @using (Html.BeginForm("Search", "AgentControls", FormMethod.Get))
    {
        <div class="form-group">
            <h4>Search with Ticket ID, Customer ID, Short Description and Description</h4>
            <br />
            @Html.TextBox("SearchData", "")
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Priority)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StDescr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedTo)
            </th>
            <th>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TicketId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Team)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StDescr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedTo)
                </td>
                <td>
                    <a>@Html.ActionLink("Assign To", "AssignTicket", new { TicketId = item.TicketId })</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                    <a>@Html.ActionLink("Change", "ChangeStatus", new { TicketId = item.TicketId })</a>
                </td>
                <td>
                    <button type="button">@Html.ActionLink("Edit", "EditTicket", new { TicketId = item.TicketId })</button>
                    <small></small>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#warningModal">
                        Delete
                    </button>

                    <div class="modal fade" id="warningModal" tabindex="-1" role="dialog" aria-labelledby="warningModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="warningModalLabel">Warning</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body" id="warningMessage">
                                    Are you sure delete this item!
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-warning" id="confirmWarning">
                                        @Html.ActionLink("Delete", "DeleteTicket", new { TicketId = item.TicketId })
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }

    </table>

</body>
<script type="text/javascript">
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>
</html>

